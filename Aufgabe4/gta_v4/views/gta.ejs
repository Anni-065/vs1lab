<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GeoTagApp</title>
    <link rel='stylesheet' href='./stylesheets/style.css'/>
</head>

<body>

<header>
    <img src="./images/location.png" width="100"
         alt="an image of a map and location">
    <h1>GeoTagApp</h1>
    <nav>
        <a href="#">About</a> | <a href="#">Help</a> | <a
                href="/">Home</a>
    </nav>
</header>

<main class="flex-container">

    <section class="tagging col-3">
        <h2>Tagging</h2>

        <!-- ############### Aufgabe1a Form1 Start -->
        <form id="tag-form" action="/tagging" method="post">
            <fieldset>
                <legend>Enter new GeoTag</legend>

                <label for="tLatitude">latitude</label>
                <input type="text" id="tLatitude" name="lat" value="<%= latitude %>" pattern="[-+]?\d{1,2}(\.\d+)?"
                       required>

                <label for="tLongitude">longitude</label>
                <input type="text" id="tLongitude" name="lon" value="<%= longitude %>" pattern="[-+]?\d{1,3}(\.\d+)?"
                       required>

                <label for="tName">name</label>
                <input type="text" id="tName" name="tName" placeholder="some name" required maxlength="10"
                       pattern="\w+"/>

                <label for="tHashtag">hashtag</label>
                <input type="text" id="tHashtag" maxlength="11" name="tHashtag"
                       placeholder="# + max. 10 letters" pattern="#\w+"/>

                <input id="tSubmit" type="submit" value="submit">
            </fieldset>
        </form>
        <!-- ############### Aufgabe1a Form1 Ende -->

    </section>

    <section class="discovery col-9">
        <h2>Discovery</h2>

        <!-- ############### Aufgabe1a Form2 Start -->
        <form id="filter-form" action="/discovery" method="post">
            <fieldset>
                <legend>Filter by SearchTerm</legend>

                <input id="dSearch" type="text" name="dSearch" placeholder="search term">
                <input id="dSubmit" type="submit" value="apply">
                <input id="dLatitude" name="lat" value="<%= latitude %>" hidden>
                <input id="dLongitude" name="lon" value="<%= longitude %>" hidden>
            </fieldset>
        </form>
        <!-- ############### Aufgabe1a Form2 Ende -->

        <div class="flex-container">
            <div class="taglist col-4">
                <ul id="results">
                    <% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
                        <li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
                    <% }); %>
                </ul>
            </div>

            <div class="tagmap col-8">
                <img id="result-img" src="./images/mapview.jpg" alt="a map with locations" data-tags="<%= data %>"/>
                <div class="caption">Result map</div>
            </div>
        </div>
    </section>

</main>

<footer>
    <span>2017 by LKIT</span>
</footer>

</body>

<!-- Load JavaScripts
    ================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
<script src="./javascripts/geotagging.js"></script>

</html>